{
    "name": "Dolibarr",
    "id": "dolibarr",
    "packaging_format": 1,
    "description": {
        "en": "Dolibarr ERP & CRM is a modern and easy to use web software to manage your business (contacts, invoices, orders, products, stocks, agenda, emailings, etc...).",
        "fr": "Dolibarr ERP & CRM est un logiciel moderne de gestion de votre activitÃ© professionnelle ou associative (contacts, factures, commandes, stocks, agenda, etc...)."
    },
    "url":"http://www.dolibarr.fr/",
    "license": "GPL-3+",
    "maintainer": {
        "name": "bram",
        "email": "cortex@worlddomination.be",
        "url": "http://worlddomination.be"
    },
    "multi_instance": "true",
    "requirements": {
      "yunohost": ">= 2.4.0"
    },
    "services":[
      "nginx",
      "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for Dolibarr"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "ask": {
                    "en": "Choose a path for Dolibarr"
                },
                "example": "/dolibarr",
                "default": "/dolibarr"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            }
        ]
    }
}
